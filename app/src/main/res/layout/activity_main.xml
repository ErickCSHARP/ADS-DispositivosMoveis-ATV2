<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/colorPrimarySurface"
    android:paddingVertical="20dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:tint="?attr/colorPrimaryFixedDim"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_book_24"
        >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/big_shoulders_text_medium"
        android:shadowColor="@color/black"
        android:text="Biográfias"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimaryFixedDim"
        android:textSize="45sp"
        android:layout_weight="1"
        android:typeface="normal" />

    <ImageView
        android:layout_marginHorizontal="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:tint="@color/cardview_light_background"
        android:src="@drawable/icon_menu_24"/>

  </LinearLayout>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/minhaListagem"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnIncluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/icon_add_24"
        android:backgroundTint="?attr/colorPrimary"
        app:tint="?android:attr/textColorPrimaryInverse"
        android:layout_margin="16dp"
        />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="?android:attr/textColorLink"
      android:paddingVertical="10dp"
      android:paddingHorizontal="5dp"
      android:gravity="right">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:text="Disciplina - programação para dispositivos móveis"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimaryFixedDim"
        android:textSize="12sp"
        android:typeface="normal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:shadowColor="@color/black"
        android:text="Aluno: Erick Lopes"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimaryFixedDim"
        android:textSize="14sp"
        android:typeface="normal" />
  </LinearLayout>

</LinearLayout>